  },
  "Jwt": {
    "SecretKey": "AIVentory_Super_Secret_Key_2024_Must_Be_At_Least_32_Characters_Long",
    "Issuer": "AIVentory",
    "Audience": "AIVentoryUsers",
    "ExpiryInHours": 24,
    "RefreshTokenExpiryInDays": 7
  },
  "EmailSettings": {
    "SmtpServer": "smtp.gmail.com",
    "SmtpPort": 587,
    "SmtpUser": "toprakkamburoglu@gmail.com",
    "SmtpPassword": "Toprak1234:",
    "FromEmail": "noreply@aiventory.com",
    "FromName": "AIVentory System"
  },
  "FileUpload": {
    "MaxFileSize": 5242880,
    "AllowedExtensions": [ ".jpg", ".jpeg", ".png", ".gif", ".webp" ],
    "ProductImagesPath": "wwwroot/uploads/products",
    "AvatarsPath": "wwwroot/uploads/avatars",
    "DocumentsPath": "wwwroot/uploads/documents"
  },
  "AIService": {
    "BaseUrl": "http://localhost:8000",
    "ApiKey": "your-ai-service-api-key",
    "Timeout": 30000
  },
  "Application": {
    "Name": "AIVentory",
    "Version": "1.0.0",
    "Environment": "Development",
    "BaseUrl": "http://localhost:5000",
    "FrontendUrl": "http://localhost:3000"
  },
  "Security": {
    "EnableRateLimiting": true,
    "RateLimitRequests": 100,
    "RateLimitPeriodInMinutes": 15,
    "EnableTwoFactorAuth": false,
    "PasswordMinLength": 6,
    "PasswordRequireUppercase": true,
    "PasswordRequireDigit": true,
    "PasswordRequireSpecialChar": false
  },
  "Ollama": {
    "BaseUrl": "http://localhost:11434",
    "ModelName": "mistral:7b",
    "TimeoutSeconds": 60,
    "MaxTokens": 4096,
    "Models": {
      "ProductRecognition": "llava-phi3:latest",
      "ColorAnalysis": "codellama:7b",
      "PricePrediction": "codellama:7b",
      "TextGeneration": "mistral:7b"
    }
  },
  "AI": {
    "MaxImageSize": 10485760,
    "SupportedFormats": [ "jpg", "jpeg", "png", "gif" ],
    "OptimizedImageSize": 1024,
    "BatchProcessingLimit": 10,
    "AnalysisTimeout": 120
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information",
      "Microsoft.SemanticKernel": "Information",
      "Microsoft.SemanticKernel.Connectors.Ollama": "Information",
      "AIVentory_backend.Services.Implementations.EnhancedAIService": "Debug",
      "AIVentory_backend.Services.AI": "Debug",
      "System.Net.Http.HttpClient": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/aiventory-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:5173",
      "https://aiventory.vercel.app"
    ],
    "AllowedMethods": [ "GET", "POST", "PUT", "DELETE", "OPTIONS" ],
    "AllowedHeaders": [ "*" ],
    "AllowCredentials": true
  }
}